$discipline_color: black;
$discipline_background: white;

$exhaustion_color: white;
$exhaustion_background: $discipline_color;

$madness_color: $exhaustion_color;
$madness_background: red;

$pain_color: $madness_background;
$pain_background: $discipline_color;

$main_color: #333;
$highlight: #820;
$background: #fff;
$black: #111;

$normal_text: verdana, arial, helvetica, sans-serif;

@mixin readable {
    padding-left: .5em;
    padding-right: .5em;
}

@font-face {
    font-family: typewriter;
    src: url(<%= asset_path('MomÂ®t___.ttf') %>);
}

html {
    height: 100%;
    background-color: $black;
}

body {
    font-family: verdana, arial, helvetica, sans-serif;
    font-size: 13px;
    line-height: 18px;
    color: $main_color;
    background-color: $background;
    margin: 10px;
    padding: 10px;
    max-width: 1100px;
    background-image: url(<%= asset_path('tear.png') %>);
    background-repeat: no-repeat;
    background-position: top left;
    background-width: 100%;
}

h1, h2, h3, th { color: $highlight; font-family: typewriter; text-transform: uppercase; }

h1 { margin-bottom: 2em; color: $background; }

h2 { margin-bottom: 2em; }

a {
	text-decoration: none;
	border-style: none;
	color: $highlight;
	
	&:hover {
		color: darken($highlight, 30%);
	}
}

input[type="number"] { width: 3em; }
input.short { width: 15em; }

ul.menu {
	list-style: none;
	padding: 0;
	margin: 0;
}

#dice, #plays { float: left; margin: 0 0 10px 0; }
#dice { margin: 0 100px 0 0; }
#plays {
  form {
    display: inline;
  }
}

#results_h { clear: both; }

#results {
	li:first-child { text-decoration: underline; }
}

#d_results {
    color: $discipline_color;
    background: $discipline_background;
    @include readable;
}
#e_results {
    color: $exhaustion_color;
    background: $exhaustion_background;
    @include readable;
}
#m_results {
    color: $madness_color;
    background: $madness_background;
    @include readable;
}
#p_results {
	color: $pain_color;
	background: $pain_background;
    @include readable;
}

.short {
    width: 1%;
    white-space: nowrap;
}

/* included in rails by default */
p, ol, ul, td {
  font-family: $normal_text;
  font-size: 13px;
  line-height: 18px; }

#notice {
  color: $highlight; }

.field_with_errors {
  padding: 2px;
  background-color: $highlight;
  color: $background;
  display: table; }

#error_explanation {
  width: 450px;
  border: 2px solid $highlight;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: $background;
  h2 {
    font-family: $normal_text;
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color: $highlight;
    color: $background; }
  ul li {
    font-size: 12px;
    list-style: square; } }
